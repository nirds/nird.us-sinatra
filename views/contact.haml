%section.contact_method
  %form{:action => "/contact", :method => "post"}
    %div.panel
      %h1 Contact Us
      %div.address 
        %br NIRD Office
        %br 1517 12th Ave #201
        %br Seattle, WA 98122
        %br (707) 266-6473

      %div.field
        %label{:name => :name}
          * Name:
        %div.input
          %input{:name => :name, :type => 'text'}


        -if form.failed?
          -if form.failed_on?(:name)
            .error
              %h3 Please fill in your name.

      %div.field
        %label{:name => :organization}
          Organization:
        %div.input
          %input{:name => :organization, :type => 'text'}


      %div.field
        %label{:name => :email}
          * Email:
        %div.input
          %input{:name => :email, :type => 'text'}

        %div.error
          -if form.failed?
            -if form.failed_on?(:email)
              %h3 Please fill in your email address.

      %div.field
        %label{:name => :phone}
          Phone:
        %div.input
          %input{:name => :phone, :type => 'text'}


      %div.field.tall
        %label{:name => :message}
          Send us a message:
        %div.input
          %textarea{:name => :message, :type => 'text-area'}
          

      %div.field
        %input{:type => "submit", :value => "Send", :class => "button"}

      %div.payment_clearfix
    %div.height_set
