%section.people
	%div.team
		%div.panel
			%div.profile
				%div.image
					%div.container
						%img(src="#{@person.image}")
					%a.twitter.top(href="https://twitter.com/#{@person.twitter}")
						Twitter: @#{@person.twitter}
				%div.text
					%h1=@person.full_name
					-@person.description.each_value do |paragraphs|
						%p=paragraphs
					%a.twitter.bottom(href="https://twitter.com/#{@person.twitter}")
						Twitter: @#{@person.twitter}
			%div.height_set