%section.logo_center
  %div.logo
    %a.home{:href=>"/"}
      %h1 NIRD
      %h2 Northwest Independent Ruby Development


%section.offerings
  -# When iterating over these structures, use each_value,
  -# as each is returning key-value pairs.
  -@offerings.each_value do |offering|
    %div.offering{:id => offering.id}
      %div.panel
        %h1= offering.tagline
        %p=  offering.copy

%section.people
  %div.team
    %div.panel
      %h1 Who We Are
      -@people.each_value do |person|
        %figure.person
          %a{:id => person.id,:href=>'#'}
            %div.container
              %img(src="#{person.image}")
            %figcaption
              %h3= person.full_name