%h1 Our People
-@people.each do |person|
  %h2= person.last["full_name"]
  -person.last["description"].each do |paragraph|
    %p= paragraph.last


%section.offerings
  %div.offering#build
    %h1 We Build
  %div.offering#teach
    %h1 We Teach
  %div.offering#partner
    %h1 We Partner

%section.people
-@people.each do |person|
  %div.person{:id => person.last["id"]}
    %h1= person.last["full_name"]
    %img(src="#{person.last["image"]}")